extends layout

block content
  h1=title

  form(method='POST' action='')
    div.form-group
      label(for='first_name') First Name:
      input#first_name.form-control(type='text' placeholder='First name' name='first_name' required='true' value=(undefined===author ? '' : author.first_name) )
      label(for='last_name') Last Name:
      input#last_name.form-control(type='text' placeholder='Last name' name='last_name' required='true' value=(undefined===author ? '' : author.last_name))
    div.form-group
      label(for='date_of_birth') Date of birth:
      input#birth_date.form-control(type='date' name='birth_date' value=(undefined===author ? '' : author.birth_date) )
      label(for='date_of_birth') Date of death:
      input#death_date.form-control(type='date' name='death_date' value=(undefined===author ? '' : author.death_date) )
    button.btn.btn-primary(type='submit') Submit
  if errors
    ul
      for error in errors
        li!= error.msg
